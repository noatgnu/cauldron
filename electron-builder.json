{
  "appId": "info.proteo.${name}",
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }

  ],
  "extraResources": [
    {
      "from": "./app/bin/${os}/python",
      "to": "./bin/${os}/python",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "./app/bin/${os}/R-Portable",
      "to": "./bin/${os}/R-Portable",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "./app/requirements.txt",
      "to": "./requirements.txt"
    },
    {
      "from": "./app/scripts",
      "to": "./scripts",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "./app/examples",
      "to": "./examples",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons/favicon.ico",
    "target": [
      "portable",
      "msi"
    ],
    "signAndEditExecutable": true,
    "publisherName": [
      "Toan Phung",
      "University of Dundee"
    ]
  },

  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
